<h1> New Post </h1>

<form class="form-group">
   <label for="title">Headline</label>
   {{input class="form-control" value=title id="title"}}

   <label for="author">Author</label>
   {{input value=author id="author" class="form-control"}}

   <label for="authorPhoto">Author Photo</label>
   {{input value=authorPhoto id="authorPhoto" class="form-control"}}

   <label for="article-content">Content</label>
   {{textarea value=article-content id="article-content" class="form-control"}}

   <label for="image">Image</label>
   {{input value=image id="image"  class="form-control"}}

   <button class="btn btn-primary" {{action 'addArticle'}} >Submit Article</button>
 </form>
